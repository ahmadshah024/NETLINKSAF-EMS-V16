<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="ems_parent_view_tree" model="ir.ui.view">
      <field name="name">ems_parent_view_tree</field>
      <field name="model">ems.parent</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name"/>
          <field name="child"/>
          <field name="phone"/>
          <field name="address"/>
        </tree>
      </field>
    </record>


    <record id="ems_parent_kanban" model="ir.ui.view">
            <field name="name">ems_parent_view_kanban</field>
            <field name="model">ems.parent</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-4 d-flex align-items-center">
                                        <field name="image" widget="image" class="oe_avatar" style="{'size': [400,400]}" />
                                    </div>
                                    <div class="col-8">
                                        <strong class="ml-2">
                                         <field name="name" />
                                        </strong>
                                        <div class="ml-2">
                                    
                                        </div>
                                        <div class="oe_kanban_details mt-3 ml-2" name="items">
                                            <ul>
                                                <li><i class="fa fa-envelope p-1" title="envelope"/> <field name="email" widget="email" /></li>
                                                <li><i class="fa fa-phone p-1" title="phone"/> <field name="phone" widget="phone" /></li> 
                                                <li><i class="fa fa-home p-1" title="address"/> <field name="address" /></li> 
                                                <li><i class="fa fa-child p-1" title="child"/> <field name="child"/></li>
                                                <li><i class="fa fa-age p-1" title="age"/> <field name="age"/></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record id="ems_parent_view_form" model="ir.ui.view">
      <field name="name">ems_parent_view_form</field>
      <field name="model">ems.parent</field>
      <field name="arch" type="xml">
        <form string="">
           <header>
                <button name="action_mark_done" string="Done" type="object" class="oe_highlight"/>
                <button name="action_mark_cancel" string="Cancel" type="object" class="oe_highlight"/>
              <field name="state" widget="statusbar" statusbar_visible="done,cancel"/>
            </header>
          <sheet>
          <field name="image" widget='image' class="oe_avatar"/>
          <div class="oe_title">
                <h1>
                    <field name="name" placeholder="Enter your name"/>
                </h1>
            </div>
            <group>
                 <group>
                    <field name="relation"/>
                    <field name="job"/>
                    <field name="languages"/>
                    <field name="child"/>
                </group>
                
                <group>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="dob"/>
                    <field name="age" />
                </group>
            </group>
            <notebook>
                <page name="child" string="Child">
                    <field name="student_ids">
                        <tree editable="top">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ems_parent_action_window">
      <field name="name">ems_parent window</field>
      <field name="res_model">ems.parent</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>




    <!-- Top menu item -->

    <menuitem name="ems_parent" id="ems_parent_menu_root"/>

    <!-- menu categories -->

    <menuitem name="parent" id="ems_parent_menu" parent="ems_parent_menu_root" action="ems_parent_action_window"/>


  </data>
</odoo>